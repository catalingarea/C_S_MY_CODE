using System;

namespace count
{
    class Program
    {
        static void Main(string[] args)
        {
            int input = int.Parse(Console.ReadLine());
            int count = 0;
            for(int i=0; i <= input; i++)
            {
                count += i+1;
            }
            Console.WriteLine(count);
            Console.ReadLine();
        }
    }
}
